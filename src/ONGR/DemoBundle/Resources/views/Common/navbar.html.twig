<div class="page-navbar-container">
    <nav class="page-navbar navbar navbar-default">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar" aria-expanded="false">
                <span class="sr-only">{{ 'header.toggle_navigation'|trans }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand visible-xs" href="#">{{ 'header.menu'|trans }}</a>
        </div>

        <div class="collapse navbar-collapse" id="main-navbar">
            {% block top_navigation_inner %}
                {% if category is defined %}
                    {% set selectedCategory = category.id %}
                {% else %}
                    {% set selectedCategory = null %}
                {% endif %}
                {{ render(url('_ongr_category_tree', {'theme' : 'top', 'maxLevel': 2, 'selectedCategory' : selectedCategory})) }}
            {% endblock %}
        </div>
    </nav>
</div>
